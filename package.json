{
  "name": "topic-cloud-rt",
  "version": "1.0.0",
  "engines": {
    "node": "6.2.0"
  },
  "description": "Real time word cloud generated from weighted words from kafka topic",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "build": "mkdir -p build && browserify --standalone d3.layout.cloud.driver index.js > build/d3.layout.cloud.driver.js"
  },
  "keywords": [
    "word",
    "cloud",
    "tag",
    "visualization",
    "canvas",
    "socket.io",
    "kafka",
    "websockets"
  ],
  "author": "tapomay, yogesh",
  "license": "BSD-3-Clause",
  "dependencies": {
    "express": "latest",
    "socket.io": "latest",
    "d3-dispatch": "1",
    "http": "^0.0.0",
    "kafka-node": "^0.2.21",
    "monitor.io": "^0.1.0",
    "yargs": "*",
    "express-hbs": "*"
  },
  "devDependencies": {
    "browserify": "^11.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tapomay/topic_cloud.git"
  },
  "bugs": {
    "url": "https://github.com/tapomay/topic_cloud/issues"
  },
  "homepage": "https://github.com/tapomay/topic_cloud#readme"
